# Ghostty Configuration

# Use Option key as Meta for Emacs
macos-option-as-alt = true

# Clipboard
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

# Page scroll for Emacs - Option+s/w sends M-s/M-w
# (Explicit keybind needed because Unicode Hex Input captures Option at OS level)
keybind = opt+s=text:\x1bs
keybind = opt+w=text:\x1bw

# Page scroll for Ghostty terminal scrollback - Shift+Option+s/w
keybind = shift+opt+s=scroll_page_down
keybind = shift+opt+w=scroll_page_up

# Tab management
keybind = super+t=new_tab
keybind = super+w=close_surface
